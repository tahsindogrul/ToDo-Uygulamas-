<div class="card">
    <div class="card-header bg-primary text-white text-center">Durumlar</div>
    <div class="card-body">
        <a href="#"  id="btnEkle" class="btn btn-success mb-3">Ekle</a>

        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>



    </div>
    <div class="card-footer"></div>

</div>


<div class="modal fade" id="modalEkle" tabindex="-1" data-bs-backdrop="static"
     data-bs-keyboard="false"
     role="dialog"
     aria-labelledby="modalTitleId"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-sm"
         role="document">
     
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">
                        Yeni Durum Ekle
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">


                    <input type="text" id="txtStatusName"  class="form-control" placeholder="Lütfen durum adı giriniz" />
                                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Kapat </button>
                    <a href="#" id="btnSave" class="btn btn-primary"> Kaydet </a>
                </div>

      
    </div>
</div>
</div>



@section Scripts {
    <script>
        fillTable();

        $("#btnEkle").click(function () {
            $("#modalEkle").modal("show");
            $("#btnSave").text("Kaydet").removeClass("btn-success").addClass("btn-primary").off().click(kaydet);
            $("#txtStatusName").val("");
        });


        $("#btnSave").click(kaydet);

        function kaydet () {
            let statusName = $("#txtStatusName").val();
            $.ajax({
                url: '/Status/Add',
                type: 'POST',
                data: { name: statusName },
                success: function (res) {
                    console.log(res);

                    $("#modalEkle").modal('hide');
                    $("#txtStatusName").val("");
                    $("tbody").append(`
                                                    <tr>
                                                        <td>${res.id}</td>
                                                                 <td>${statusName}</td>
                                                         <td><a onclick="deleteStatus(${res},this)" href="#" class="btn btn-danger">Sil</a>
                                                                          <a onclick="updateStatus(${res.id},this,'${statusName}')" href="#" class="btn btn-warning">Düzenle</a>
                                                         </td>
                                                    </tr>

                                                    `);


                }
            });
        }


        function deleteStatus(id,element) { 
            
            if (confirm("Silmek istediğinizden emin misiniz ?")) { 
            
            $.ajax({
                url:'/Status/Delete',
                type:'POST',
                data: {id:id},
                success: function () {
                    $(element).parent().parent().remove();

                }

            });
            
            }
            
        }

        function updateStatus(id, element,statusName) {
            $("#modalEkle").modal('show');
            $("#txtStatusName").val(statusName);
            $("#btnSave").text("Güncelle").removeClass("btn-primary").addClass("btn-success").off().click(function () {
                $.ajax({
                    url:'/Status/Update',
                    type:'POST',
                    data: { id: id, name: $("#txtStatusName").val() },
                    success: function () {
                        $("#modalEkle").modal("hide");
                        $(element).parent().parent().children()[1].innerText = $("#txtStatusName").val();

                       
                    }
                })
            });

        }


        function fillTable() {
            $.ajax({
                url: '/Status/GetAll',
                type: 'GET',
                success: function (res) {
                    $("tbody").empty();
                    for (let item of res) {
                        $("tbody").append(`
                                    <tr>
                                        <td>${item.id}</td>
                                                 <td ondblclick="updateStatusInline(${item.id},this)">${item.name}</td>
                                                 <td>
                                      <a onclick="deleteStatus(${item.id},this)" href="#" class="btn btn-danger">Sil</a> 
                                    <a onclick="updateStatus(${item.id},this,'${item.name}')" href="#" class="btn btn-warning">Düzenle</a></td>
                                    </tr>

                                    `);
                    }

                }
            });
        }

        function updateStatusInline(element) {
            $(element).attr("contentEditable", "true");
            $(element).one().focusout(function () {

                $(element).removeAttr("contentEditable", "true");
                $.ajax({
                    url:'/Status/Update',
                    type:'POST',
                    data: {id:id,name:$(element).text()},
                    success: function (res) {

                    }
                })
            });
        }
        






    </script>
}